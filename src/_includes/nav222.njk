li.subnav-wrap {
    display: block;
    font-weight: 500;
    color: var(--link-lt);
}


.nav {
    max-height: 0;
    transition: max-height .5s ease-out;
}

/* Sub nav */
li.subnav-wrap {
    position: relative;
}
.subnav-content {
    background-color:  #fff;
    width: 100%;
    z-index: 1;
    padding: 20px 0 ;
    display: none;
  }
.subnav-content a {
