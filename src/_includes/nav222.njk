*/


/* Menu Icon */

.hamb {
    cursor: pointer;
    float: right;
    padding: 40px 20px;
}


.hamb-line {
    background: #fff;
    display: block;
    height: 2px;
    position: relative;
    width: 24px;
    
}

.hamb-line::before,
.hamb-line::after {
    background: #fff;
    content: '';
    display: block;
    height: 100%;
    position: absolute;
    transition: all .2s ease-out;
    width: 100%;
}

.hamb-line::before {
    top: 5px;
}

.hamb-line::after {
    top: -5px;
}


.side-menu {
    display: none;
}

/* Toggle menu icon */


.side-menu:checked ~ nav {
    max-height: 100%;
}
.side-menu:checked ~ .subnav-content {
    display: block;
}
.side-menu:checked ~ .hamb .hamb-line {
    background: transparent;
}

.side-menu:checked ~ .hamb .hamb-line::before {
    transform: rotate(-45deg);
    top:0;

}

.side-menu:checked ~ .hamb .hamb-line::after {
    transform: rotate(45deg);
    top:0;
}


/* Responsiveness */

@media (min-width: 768px) {
    .header .container {
        display: flex;
        max-width: var(--grid-max-width);
        margin: 0 auto;
        padding: var(--space-xs) var(--space-s);
        border: 1px solid #3366ff;
    }
    .header .container > * {
        flex-grow: 1;
    }
 
    .nav, 
    .nav .menu {
        display: flex;
        flex-shrink: 0;
        align-items: stretch;
        max-height: 100%;
    }


    ul.menu li {
        /* display: block; */
        padding: var(--space-3xs) var(--space-xs);
        border-radius: 4px;
    }

/*    .menu a:hover,  */
/*    li.subnav-wrap:hover,  */
    ul.menu li:hover, 

    li.subnav-wrap .side-menu:checked {
        color: #fff;
        background-color: var(--primary);
        transform: skew(-24deg);
    }
    ul.menu li:hover span, 
    li.subnav-wrap .subnavbtn, 
    .side-menu:checked ~ .subnav .subnavbtn, 
    .side-menu:checked ~ .subnav-content span
     {
        display: block;
        transform: skew(24deg);
    }


    /* Sub nav */
    .subnav-content {
        position: absolute;
        left: 0;
        /* min-width: 340px; */
        width: max-content;
        padding: 20px 0 ;
        display: none;
        background-color: #fff;
    }

    .subnav-content a {
        color: var(--charcoal);
        white-space: nowrap;
    }
    .hamb {
        display: none;
    }

}




li.subnav-wrap {
