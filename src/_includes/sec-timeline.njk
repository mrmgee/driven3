}

/* TIMELINE
–––––––––––––––––––––––––––––––––––––––––––––––––– */

.timeline ul {
  background: rgb(25 25 25);
  padding: 3rem 0;
}

.timeline ul li {
  list-style-type: none;
  position: relative;
  width: 6px;
  margin: 0 auto;
  padding-top: 4rem;
  /* background: #fff; */
  background: #f79837;
}

.timeline ul li::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 3rem;
  height: 3rem;
  border-radius: 50%;
  background: inherit;
  color: #fff;
  font-size: 2rem;
  font-weight: 600;
  text-align: center;
  z-index: 1;
}
.timeline ul li:nth-child(1)::after {
  content: "1";
}
.timeline ul li:nth-child(2)::after {
  content: "2";
}
.timeline ul li:nth-child(3)::after {
  content: "3";
}
.timeline ul li:nth-child(4)::after {
  content: "4";
  bottom: 8rem;
}
.timeline ul li:nth-child(5)::after {
  content: "5";
}
.timeline ul li > div {
  position: relative;
  bottom: 0;
  /* width: 400px; */
  /* padding: 15px; */
  min-width: 42rem;
  /* padding: 1rem; */
  background-color: rgb(248 248 248);
}

.timeline ul li > div::before {
  content: "";
  position: absolute;
  bottom: 7px;
  width: 0;
  height: 0;
  border-style: solid;
}

.timeline ul li:nth-child(odd) > div {
  left: 40px;
}

.timeline ul li:nth-child(odd) > div::before {
  left: -15px;
  border-width: 8px 16px 8px 0;
  /* border-color: transparent #f45b69 transparent transparent; */
  border-color: transparent #f79837 transparent transparent;
}

.timeline ul li:nth-child(even) div {
  left: -706px;
}

.timeline ul li:nth-child(even) div::before {
  right: -15px;
  border-width: 8px 0 8px 16px;
  border-color: transparent transparent transparent #f79837;
}

time {
  display: block;
  font-size: 1.2rem;
  font-weight: bold;
  margin-bottom: 8px;
}
.timeline .process-item h5, 
.timeline .process-item .columns {
  padding: 0.8rem;
}
.timeline .process-item .img-wrap {
  background-color: #fff0;
}
.timeline .process-item .img-wrap .icon {
  font-size: 8rem;
}

.timeline .process-item p {
  font-size: 1.2rem;
}

.timeline ul li:nth-last-child(1) {
  padding-bottom: 8rem;
}

/*
